{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchDatasources": ["docker"],
      "groupName": "docker base images"
    }
  ],
  "gomodTidy": true
}
